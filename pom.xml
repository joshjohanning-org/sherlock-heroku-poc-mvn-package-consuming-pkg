<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.sherlockjosh</groupId>
	<artifactId>herokupocjosh</artifactId>
	<version>1.1.0-${timestamp}</version>
	<packaging>jar</packaging>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.1.4.RELEASE</version>
		<relativePath />
	</parent>

	<name>herokupoc</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>

		<timestamp>${maven.build.timestamp}</timestamp>
		<maven.build.timestamp.format>yyyyMMddHHmm</maven.build.timestamp.format>

		<!-- sonar properties -->
		<sonar.projectKey>arjunchakri_sherlock-heroku-poc</sonar.projectKey>
		<sonar.organization>arjunchakri</sonar.organization>
		<sonar.host.url>https://sonarcloud.io</sonar.host.url>

	</properties>

	<scm>
		<connection>scm:git:git@github.com:joshjohanning-org/sherlock-heroku-poc-mvn-package-consuming-pkg.git</connection>
		<developerConnection>scm:git:git@github.com:joshjohanning-org/sherlock-heroku-poc-mvn-package-consuming-pkg.git</developerConnection>
		<url>https://github.com/joshjohanning-org/sherlock-heroku-poc-mvn-package-consuming-pkg/tree/master</url>
	</scm>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-websocket</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-actuator</artifactId>
		</dependency>

		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.7</version>
		</dependency>
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>2.8.5</version>
		</dependency>
		<dependency>
			<groupId>org.springdoc</groupId>
			<artifactId>springdoc-openapi-ui</artifactId>
			<version>1.5.5</version>
		</dependency>

		<!-- https://mvnrepository.com/artifact/com.github.dblock/oshi-core -->
		<dependency>
			<groupId>com.github.dblock</groupId>
			<artifactId>oshi-core</artifactId>
			<version>3.4.0</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/io.micrometer/micrometer-registry-prometheus -->
		<dependency>
			<groupId>io.micrometer</groupId>
			<artifactId>micrometer-registry-prometheus</artifactId>
		</dependency>
		
		<!-- https://maven.pkg.github.com/joshjohanning-org/github-maven-package-sample -->
		<dependency>
			<groupId>com.joshjohanning</groupId>
			<artifactId>github-maven-package-sample</artifactId>
			<version>0.0.5</version>
		</dependency>

		<!-- https://maven.pkg.github.com/joshjohanning-org/github-maven-package-sample2 -->
		<dependency>
			<groupId>com.joshjohanning</groupId>
			<artifactId>github-maven-package-sample2</artifactId>
			<version>0.0.6</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>

		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>github</id>
			<name>GitHub Packages</name>
			<url>https://maven.pkg.github.com/joshjohanning-org/sherlock-heroku-poc-mvn-package-consuming-pkg</url>
		</repository>
	</distributionManagement>


</project>
